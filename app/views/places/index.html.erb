<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        おすすめスポット一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @places.each do |place| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to place_path(place) do %>
                  <% if place.image.attached?%>
                    <%= image_tag(place.image) %>
                  <% else %>
                    <%= image_tag("no-image.png") %>
                  <% end %>
                <% end %>
              </figure>
              </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= link_to user_path(place.user.id) do %>
                      <% if place.user.image.attached?%>
                        <%= image_tag(place.user.image, class: 'image') %>
                      <% else %>
                        <%= image_tag("no-image.png", class: 'image') %>
                      <% end %>
                    <% end %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%=link_to place.user.username, user_path(place.user) %></div>
                </div>
              </div>

              <div class="content">
                <time><%= place.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
